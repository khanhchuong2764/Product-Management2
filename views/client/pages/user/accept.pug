extends ../../layouts/default.pug
include ../../mixin/box-head.pug

block main
    .container.my-3

        include ../../partials/list-btn-user.pug 

        .row
        .col-12
            +box-head(pageTitle)

        .row
            each item in users
                .col-3
                    div(class="box-user")
                        div(class="inner-avatar")
                            img(
                                src=(item.avatar ? item.avatar : "/client/images/avatar.jpg")
                                alt=""
                            )
                        div(class="inner-info")
                            div(class="inner-name") #{item.fullName}
                            div(class="inner-buttons")
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accept-friend=item.id
                                    ) Chấp nhận
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-refuse-friend=item.id
                                ) Xóa
                                button(
                                    class="btn btn-sm btn-secondary mr-1"
                                    btn-deleted-friend
                                    disabled
                                ) Đã xóa
                                button(
                                    class="btn btn-sm btn-primary mr-1"
                                    btn-accepted-friend
                                    disabled
                                ) Đã chấp nhận

block script 
    script(src="/client/js/users.js") 
