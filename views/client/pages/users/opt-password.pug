extends ../../layouts/default.pug

block main
    .container.my-5
        .row.justify-content-center
            .col-8
                h1(class="text-center") Nhập Mã OTP
                form(action=`/user/password/otp`, method="post")
                    div(class="form-group")
                        label(for="email") Email
                        input(type="email" class="form-control" id="email" name="email" value=email required readonly)
                    div(class="form-group")
                        label(for="otp") Otp
                        input(type="text" class="form-control" id="otp" name="otp" required)
                    div(class="form-group")
                        button(type="submit" class="btn btn-primary btn-block") Gửi mã xác nhận
                form(action="/user/password/forgot", method="post")
                    input(type="email" class="form-control d-none" id="email" name="email" value=email required readonly)
                    button(type="submit" class="btn btn-primary") Gửi lại mã otp