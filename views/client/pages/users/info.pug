extends ../../layouts/default.pug
include ../../mixin/box-head.pug
block main
    .container.my-3
        .row
            .col-12
                +box-head("Thông tin cá nhân")
        
        .row.justify-content-center 
            .col-2
                img(src=(user.avatar ? user.avatar : ""), alt="" uploads-image-previews class="imguploads" uploads-image-input)
            .col-6
                form(
                    action=`/user/info?_method=PATCH` 
                    method="POST",
                    enctype="multipart/form-data" 
                ) 
                    div(class="form-group")
                        label(for="fullName") Họ Tên *
                        input(type="text" id="fullName" name="fullName" class="form-control" required value=user.fullName)
                    div(class="form-group")
                        label(for="email") Email *
                        input(type="email" id="email" class="form-control" required value=user.email readonly)
                    div(class="form-group")
                        label(for="password") Mật Khẩu *
                        input(type="password" id="password" name="password" class="form-control")
                    div(class="form-group")
                        label(for="phone") Số Điện Thoại
                        input(type="text" id="phone" name="phone" class="form-control" value=user.phone)
                    div(class="form-group")
                        label(for="address") Địa Chỉ
                        input(type="text" id="address" name="address" class="form-control" value=user.address required)
                    div(class="form-group" uploads-image)
                        label(for="avatar") Avatar
                        input(type="file" id="avatar" name="avatar" class="form-control-file" accept="image/*" uploads-image-input) 
                        button(class="btn btn-secondary btn-sm ml-3 btn-delete-uploads d-none" type="button") Xóa 
                    div(class="form-group")
                        button(type="submit" class="btn btn-primary") Lưu