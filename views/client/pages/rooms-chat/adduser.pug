extends ../../layouts/default.pug
include ../../mixin/box-head.pug
block main
  .container.my-3
    .row
      .col-12
        +box-head(titlePage)
    .row
      .col-5
        form(
          action=`/rooms-chat/adduser/${RoomChatId}?_method=PATCH`
          method="POST"
        )
          div(class="form-group")
            label Danh Sách Thành Viên
                each friend in friendList
                    div(class="form-check")
                        input(
                            class="form-check-input"
                            type="checkbox"
                            value=friend.id    
                            id=`user-${friend.id}`
                            name="usersId"
                        )
                        label(
                            class="form-check-label"
                            for=`user-${friend.id}`
                        ) #{friend.fullName}
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-primary"
            ) Thêm