mixin form-change-multi(path)
    form(action=path method="post" id="form-change-multi")
        .d-flex.align-items-start
            .form-group
                select(name="type" class="form-control" select-form)
                    option(selected disabled) --Chọn Hành Động--  
                    option(value="active") Hoạt Động   
                    option(value="inactive") Dừng Hoạt Động
                    option(value="delete-all") Xóa Tất Cả
                    option(value="posittion-change") Thay đổi vị trí
            .form-group
                input(type="text" name="ids" value="" class="form-control d-none")  
                button(type="submit" class="btn btn-primary") Áp Dụng


mixin form-change-multi2(path)
    form(action=path method="post" id="form-change-multi")
        .d-flex.align-items-start
            .form-group
                select(name="type" class="form-control" select-form)
                    option(selected disabled) --Chọn Hành Động--  
                    option(value="active") Hoạt Động   
                    option(value="inactive") Dừng Hoạt Động
                    if (role.permission.includes("products-trash-delete"))
                        option(value="delete-all") Xóa Tất Cả
                    if (role.permission.includes("products-trash-create"))
                        option(value="restore-all") Khôi Phục
            .form-group
                input(type="text" name="ids" value="" class="form-control d-none")  
                button(type="submit" class="btn btn-primary") Áp Dụng