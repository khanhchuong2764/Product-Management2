extends ../../layouts/default.pug

block main  

    if (record.title) 
        h1(class="mb-4") #{record.title}

    if (record.parent_id) 
        div(class="mb-4") Danh Mục Cha: <b>#{recordparent.title}</b>
    
    if (record.thumbnail) 
        div(class="mb-4")
            img(src=record.thumbnail, alt="" style="width:200px")
    
    if (record.status) 
        div(class="mb-4")
            span(class="status-detail") Trạng Thái:
            if (record.status == "active")
                span(class="badge badge-success") Hoạt Động
            else 
                span(class="badge badge-danger") Dừng Hoạt Động
    
    if (record.posittion) 
        div(class="mb-4") Vị Trí: <b>#{record.posittion}</b>
    
    if (record.description) 
        div(class="mb-4") Mô Tả: !{record.description}
    

    a(class="btn btn-warning btn-sm" href=`${PrefixAdmin}/product-category/edit/${record.id}` ) Chỉnh Sửa