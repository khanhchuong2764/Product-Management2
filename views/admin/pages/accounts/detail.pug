extends ../../layouts/default.pug

block main  
    h2 Thông Tin Tài Khoản

    if (record.avatar) 
        div(class="mb-4")
            img(src=record.avatar, alt="" style="width:200px")

    if (record.fullName) 
        div(class="mb-4") Họ tên: #{record.fullName}

    if (record.email) 
        div(class="mb-4") Email: #{record.email}

    if (record.phone) 
        div(class="mb-4") Số Điện Thoại: #{record.phone}

    if (record.roleTitle) 
        div(class="mb-4") Phân Quyền: #{record.roleTitle}

    if (record.status) 
        div(class="mb-4")
            span(class="status-detail") Trạng Thái:
            if (record.status == "active")
                span(class="badge badge-success") Hoạt Động
            else 
                span(class="badge badge-danger") Dừng Hoạt Động
    
    a(class="btn btn-warning btn-sm" href=`${PrefixAdmin}/my-accounts/edit` ) Chỉnh Sửa